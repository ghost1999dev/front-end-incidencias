<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsUserActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles de Incidencia"
            android:textSize="30sp"
            android:textAlignment="center"

            android:layout_marginBottom="10dp">

        </TextView>
        <ImageView
            android:id="@+id/IncidenciaImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/DescripcionIncidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_marginBottom="10dp">

        </TextView>
        <TextView
            android:id="@+id/Incidenciafecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_marginBottom="10dp">

        </TextView>
        <TextView
            android:id="@+id/Incidenciaestado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_marginBottom="10dp">

        </TextView>
        <TextView
            android:id="@+id/IncidenciaNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_marginBottom="10dp">

        </TextView>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>